    <style name="StyleIsOnlineTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">42dp</item>
        <item name="android:background">@drawable/bg_text_view_online</item>
        <item name="android:drawableStart">@drawable/ic_circle_bright_turquoise</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/bright_turquoise</item>
