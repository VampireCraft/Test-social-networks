<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/decoration_main_filled_with_gray_border"
    android:maxWidth="320dp"
    android:maxHeight="180dp"
    android:minWidth="320dp"
    android:minHeight="180dp"
    android:orientation="vertical"
    android:paddingHorizontal="18dp"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/tvTitleOpenPhoto"
        style="@style/text_raleway_semibold_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_eye"
        android:drawablePadding="10dp"
        android:text="Открыть фото"
        android:textAlignment="center"
        android:textColor="@color/bright_turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleChangePhoto"
        style="@style/text_raleway_semibold_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_change_photo"
        android:drawablePadding="10dp"
        android:text="Изменить фото"
        android:textAlignment="center"
        android:textColor="@color/bright_turquoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleDeletePhoto"
        style="@style/text_raleway_semibold_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="10dp"
        android:text="Удалить"
        android:textAlignment="center"
        android:textColor="@color/sunset_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>